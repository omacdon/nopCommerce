@model Int32
<input asp-for="@Model"/>
@{
    var postfix = "";
    if (ViewData.ContainsKey("postfix") && ViewData["postfix"] != null)
    {
        postfix = ViewData["postfix"].ToString();
    }
}
<script>
    $(document).ready(function() {
        $("#@Html.IdForModel()").kendoNumericTextBox({
            min: @int.MinValue.ToString(CultureInfo.InvariantCulture),
            max: @int.MaxValue.ToString(CultureInfo.InvariantCulture),
            decimals: 0,
            restrictDecimals: true,
            format: "# @postfix"
        });
    });
</script>