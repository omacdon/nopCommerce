@model Double
<input asp-for="@Model"/>
@{
    var postfix = "";
    if (ViewData.ContainsKey("postfix") && ViewData["postfix"] != null)
    {
        postfix = ViewData["postfix"].ToString();
    }
}
<script>
   $(document).ready(function () {
    $("#@Html.IdForModel()").kendoNumericTextBox({
        min: @double.MinValue.ToString(CultureInfo.InvariantCulture),
        max: @double.MaxValue.ToString(CultureInfo.InvariantCulture),
        decimals: 4,
        restrictDecimals: true,
        format: "#.0000 @postfix"
        });
    });
</script>